<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_primary"
    tools:context=".MainActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/viewpager_background"
        android:id="@+id/onBoardingViewPager"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/indicatorsContainer"
        android:layout_margin="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat"
        android:id="@+id/textSkip"
        android:text="Skip"
        android:textColor="@color/custom_text_primary" />



    <View
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/viewBg"
        android:background="@drawable/icon_outer_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/onBoardingViewPager"
        android:layout_marginTop="30dp"
        />
    
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/nextBtn"
        android:src="@drawable/ic_right"
        android:layout_below="@id/onBoardingViewPager"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_background"/>

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/custom_secondary"
        android:fontFamily="@font/montserrat"
        android:paddingHorizontal="40dp"
        android:text="Get Started"
        app:cornerRadius="20dp"
        android:layout_marginBottom="50dp"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>