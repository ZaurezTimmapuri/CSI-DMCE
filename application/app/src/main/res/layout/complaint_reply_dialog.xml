<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:padding="10dp"
    android:id="@+id/dialogCustom"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentDetailsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/complaint_desc"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:text="Your Reply"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_complaint_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_complaint_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/csi_primary_accent"
                app:strokeWidth="2dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/lato"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/csi_primary_accent"
                android:textSize="18dp"
                app:cornerRadius="28dp"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_complaint_dialog_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/csi_primary_accent"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="15dp"
                    android:fontFamily="@font/lato"
                    android:layout_alignParentEnd="true"
                    android:text="Reply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:cornerRadius="28dp" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>