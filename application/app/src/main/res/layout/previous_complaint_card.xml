<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentDetailsLayout">

        <ImageView
            android:id="@+id/imageview_complaint_user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/jk_pic"
            app:riv_corner_radius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:text="Jayneel Kanungo"
            android:id="@+id/text_view_complaint_user_name"
            android:fontFamily="@font/lato"
            android:textFontWeight="800"
            android:layout_marginTop="60dp"
            android:layout_marginStart="-10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imageview_complaint_user_avatar"/>

        <TextView
            android:id="@+id/text_view_complaint_user_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:textSize="20dp"
            android:text="2021DSCO002"
            android:fontFamily="@font/lato"
            android:layout_below="@id/text_view_complaint_user_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imageview_complaint_user_avatar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_complaint_user_student_id"
            android:padding="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expense_expanded_event_name"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato"
                    android:text="Subject : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_expense_expanded_event_name"
                    android:layout_toEndOf="@id/expense_expanded_event_name"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato"
                    android:text="Payment not received"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/complaint_desc"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:text="Description of the problem :"/>

            <TextView
                android:id="@+id/text_view_complaint_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:gravity="start"
                android:text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. Richard McClintock, a Latin professor at Hampden-Sydney College in Virginia, looked up one of the more obscure Latin words, consectetur, from a Lorem Ipsum passage, and going through the cites of the word in classical literature, discovered the undoubtable source. Lorem Ipsum comes from sections 1.10.32 and 1.10.33"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:text="Reply: "/>

            <TextView
                android:id="@+id/text_view_complaint_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:gravity="start"
                android:text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. Richard McClintock, a Latin professor at Hampden-Sydney College in Virginia, looked up one of the more obscure Latin words, consectetur, from a Lorem Ipsum passage, and going through the cites of the word in classical literature, discovered the undoubtable source. Lorem Ipsum comes from sections 1.10.32 and 1.10.33"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>