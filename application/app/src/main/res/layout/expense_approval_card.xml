<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_view_expense_rcv_avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:src="@drawable/jk_pic"
            app:riv_corner_radius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jayneel Kanungo"
            android:id="@+id/user_student_name"
            android:layout_toEndOf="@+id/image_view_expense_rcv_avatar"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/lato"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021DSCO002"
            android:id="@+id/user_student_id"
            android:layout_toRightOf="@+id/image_view_expense_rcv_avatar"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/lato"
            android:layout_below="@id/user_student_name"
            android:textColor="@color/black"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 2000"
            android:layout_below="@+id/user_student_id"
            android:layout_marginLeft="15dp"
            android:id="@+id/text_view_expense_cost"
            android:layout_toEndOf="@+id/image_view_expense_rcv_avatar"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_below="@id/text_view_expense_cost">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dialog_decline_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_below="@id/user_dept"
            android:paddingVertical="15dp"
            android:fontFamily="@font/lato"
            android:layout_margin="5dp"
            android:text="Deny"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="800"
            android:textSize="18dp"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dialog_approve_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/csi_primary_accent"
            android:paddingHorizontal="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_below="@id/user_dept"
            android:paddingVertical="15dp"
            android:fontFamily="@font/lato"
            android:layout_alignParentEnd="true"
            android:text="Approve"
            android:textFontWeight="800"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:cornerRadius="28dp" />

        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>